{deps, [
  {lfe,       "1.0.2"},
  {clj,       {git, "git://github.com/lfex/clj.git",
               {tag, "0.4.0"}}},
  {exemplar,  {git, "git://github.com/lfex/exemplar.git",
               {tag, "0.3.0"}}},
  {levaindoc, {git, "git://github.com/quasiquoting/levaindoc.git",
               {tag, "0.5.0"}}}
]}.

{plugins, [
  {'lfe-compile', "0.4.1", {pkg, rebar3_lfe_compile}}
]}.

{provider_hooks, [{pre, [{compile, {lfe, compile}}]}]}.

{project_plugins, [rebar3_proper]}.

{lodox, [
  {apps, [
    {lodox, [
      {'source-uri',
       "https://github.com/lfe-rebar3/lodox/blob/"
       "{version}/{filepath}#L{line}"}
    ]}
  ]}
]}.

{profiles, [
  {test, [
    {erl_opts, [{src_dirs, ["src", "test"]}]},
    {eunit_compile_opts, [{src_dirs, ["test"]}]},
    {deps, [
      proper,
      {ltest, {git, "git://github.com/lfex/ltest.git",
               {tag, "0.8.1"}}}
    ]}
  ]}
]}.

{proper_opts, [
  {module,       "lodox_parse_tests"},
  {spec_timeout, 30000},
  {numtests,     1000},
  {max_size,     10}
]}.
